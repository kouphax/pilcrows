# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Pilcrows.index()
GET     /search                     controllers.Pilcrows.search()
GET     /edit                       controllers.Pilcrows.edit()
GET     /create                     controllers.Pilcrows.create()
GET     /view/:id                   controllers.Pilcrows.view(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
